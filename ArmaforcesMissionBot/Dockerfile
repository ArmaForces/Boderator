#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["ArmaforcesMissionBot/ArmaforcesMissionBot.csproj", "ArmaforcesMissionBot/"]
COPY ["ArmaforcesMissionBotSharedClasses/ArmaforcesMissionBotSharedClasses.csproj", "ArmaforcesMissionBotSharedClasses/"]

RUN dotnet restore "ArmaforcesMissionBot/ArmaforcesMissionBot.csproj"
COPY . .
WORKDIR "/src/ArmaforcesMissionBot"
RUN dotnet build "ArmaforcesMissionBot.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ArmaforcesMissionBot.csproj" -c Release -o /app/publish

FROM base AS final

HEALTHCHECK --start-period=30s \
    CMD curl --fail http://localhost:80/health || exit 1  

WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ArmaforcesMissionBot.dll"]
